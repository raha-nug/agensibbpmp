<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Form Surat</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="/upload.css" />
    <script
      src="https://code.jquery.com/jquery-3.7.1.slim.min.js"
      integrity="sha256-kmHvs0B+OpCW5GVHUNjv9rOmY0IvSIRcf7zGUDTDQM8="
      crossorigin="anonymous"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css"
      rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
  </head>
  <body>
    <div class="top-bar">
      <button class="close-btn" onclick="goToHome()">
        <i class="fas fa-times"></i>
      </button>
      <button class="send-btn" id="submitButton">
        <i class="fas fa-paper-plane"></i>
        Kirim
      </button>
    </div>

    <form
      action="/admin/add-surat"
      method="POST"
      enctype="multipart/form-data"
      id="suratForm">
      <div class="form-container">
        <!-- Judul Surat -->
        <div class="input-container">
          <i class="fas fa-heading"></i>
          <input
            type="text"
            name="judul"
            id="judul"
            placeholder="Judul Surat" />
        </div>

        <!-- Deskripsi Surat -->
        <div class="input-container">
          <i class="fas fa-align-left"></i>
          <textarea
            id="deskripsi"
            name="deskripsi"
            placeholder="Deskripsi"></textarea>
        </div>

        <!-- Tujuan Surat -->
        <div class="input-container">
          <i class="fas fa-user"></i>
          <select
            id="tujuan"
            name="tujuan[]"
            multiple="multiple"
            style="width: 100%">
            <% users.forEach(user => { %>
            <option value="<%= user.id %>"><%= user.nama %></option>
            <% }) %>
          </select>
        </div>

        <!-- Atur Batas Waktu -->
        <div class="input-container">
          <i class="fas fa-calendar-alt"></i>
          <input
            type="date"
            name="deadline"
            id="batas-waktu"
            placeholder="Atur Batas Waktu" />
        </div>

        <!-- Lampirkan Surat -->
        <div class="input-container">
          <i class="fas fa-paperclip"></i>
          <input type="file" name="file" id="lampiran" />
        </div>
      </div>
    </form>

    <script>
      $(document).ready(function () {
        $("#tujuan").select2();
      });
      function goToHome() {
        window.location.href = "/admin"; // Sesuaikan URL halaman
      }

      document.getElementById("submitButton").addEventListener("click", () => {
        document.getElementById("suratForm").submit(); // Trigger form submission
      });
    </script>
  </body>
</html>
